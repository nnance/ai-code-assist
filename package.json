{
  "name": "ai-code-assist",
  "displayName": "ai-code-assist",
  "description": "ChatGPT Code Assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-code-assist.ask",
        "title": "Ask ChatGPT"
      },
      {
        "command": "ai-code-assist.explain",
        "title": "AICodeAssist: Explain selection"
      }
    ],
    "commandPalette": [
      {
        "command": "ai-code-assist.explain",
        "when": "editorHasSelection"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-code-assist",
          "title": "AICodeAssist",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "ai-code-assist": [
        {
          "type": "webview",
          "id": "ai-code-assist.chatView",
          "name": "AICodeAssist"
        }
      ]
    },
    "configuration": {
      "title": "ai-code-assist",
      "type": "object",
      "properties": {
        "ai-code-assist.apiKey": {
          "type": "string",
          "description": "API Key to chat.openai.com",
          "order": 1
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/microlight": "^0.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/showdown": "^2.0.0",
    "@types/vscode": "^1.77.0",
    "@types/vscode-webview": "^1.57.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "openai": "^3.2.1"
  }
}
